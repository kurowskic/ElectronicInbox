<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!--<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger - %msg%n"/>-->
            <PatternLayout pattern="[%d{HH:mm:ss.SSS} - %-6level] %msg%n"/>
        </Console>

        <File name="LogFile" fileName="eib_app.log" append="true" bufferedIO="true" bufferSize="8192">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>

        <Async name="Async">
            <AppenderRef ref="LogFile"/>
        </Async>

    </Appenders>
    <Loggers>
        <Root level="ALL">
            <AppenderRef ref="Console" level="INFO" />
            <AppenderRef ref="Async" level="INFO" />
        </Root>
    </Loggers>
</Configuration>
