<?xml version="1.0" encoding="UTF-8"?>


<Configuration status="INFO" name="ElectronicInBox" packages="">

    <Appenders>
        <!-- LIN -->
        <!--
        <File name="File" fileName="/wildfly/standalone/log/eib-logfile.log">
        -->
        <!-- WIN -->

        <File name="File" fileName="c:\\logs\\eib-logfile.log">

            <PatternLayout
                    pattern="%d{yyyy-MM-dd | HH:mm:ss} | %-5level | %logger{40}.%5M}() | %msg%n" />
        </File>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd | HH:mm:ss} | %-5level | %logger{40}.%5M() | %msg%n" />
        </Console>
    </Appenders>

    <Loggers>
        <logger name="com.ctk.servlet.IndexServlet" level="INFO">
            <AppenderRef ref="File" level="INFO" />
            <AppenderRef ref="Console" level="INFO"/>
        </logger>

        <Root level="ERROR">
        </Root>
    </Loggers>

</Configuration>
