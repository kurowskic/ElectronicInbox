<?xml version="1.0" encoding="UTF-8"?>


<Configuration status="INFO" name="ElectronicInBox" packages="">

    <Appenders>
        <!--
        https://stackoverflow.com/questions/11668770/log4j-log-file-in-user-home-directory
        -->
        <!-- LIN -->
        <!--
        <File name="File" fileName="logfile.log">
        -->
        <!-- WIN -->

        <File name="File" fileName="%LOCALAPPDATA%\\logfile.log">

            <PatternLayout
                    pattern="%d{dd/MM/yyyy - HH:mm:ss} | %-5level | %logger{36}: %M(): %msg%n" />
        </File>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d{dd/MM/yyyy - HH:mm:ss} | %-5level | %logger{36}: %M(): %msg%n" />
        </Console>
    </Appenders>

    <Loggers>
        <logger name="com.ctk.servlet.IndexServlet" level="INFO">
            <AppenderRef ref="File" level="INFO" />
            <AppenderRef ref="Console" level="INFO"/>
        </logger>

        <Root level="ERROR">
        </Root>
    </Loggers>

</Configuration>
